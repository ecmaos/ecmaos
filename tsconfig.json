{
  "include": ["core/**/*.ts"],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/tests/**/*",
    "core/metal",
    "core/swapi"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true
  }
}