{
  "extends": "@ecmaos/config-typescript/tsconfig.base.json",
  "include": ["core/**/*.ts"],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/tests/**/*",
    "core/metal",
    "core/swapi",
    "core/bios",
    "core/kernel/src/ui.ts"
  ],
  "compilerOptions": {
    "rootDir": "./core",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true
  }
}