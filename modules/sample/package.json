{
  "name": "@ecmaos/module-sample",
  "version": "0.1.0",
  "description": "Sample module for EcmaOS",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/release.d.ts",
      "import": "./build/release.js"
    },
    "./debug": {
      "types": "./build/debug.d.ts",
      "import": "./build/debug.js"
    }
  },
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "pnpm run asbuild:debug && pnpm run asbuild:release",
    "build": "pnpm run asbuild",
    "dev": "nodemon",
    "start": "pnpx serve -C .",
    "test": "node tests"
  },
  "nodemonConfig": {
    "exec": "pnpm run asbuild",
    "ext": "ts,js,html,css,cpp,hpp",
    "watch": [
      "assembly/**/*"
    ]
  },
  "devDependencies": {
    "assemblyscript": "^0.27.31",
    "serve": "^14.2.3"
  }
}