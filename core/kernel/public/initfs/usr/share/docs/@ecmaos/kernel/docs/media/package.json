{
  "name": "ecmaos",
  "version": "0.9.2",
  "description": "ecmaOS: Micro-kernel and framework for web technologies",
  "homepage": "https://github.com/ecmaos/ecmaos#readme",
  "license": "MIT+Apache-2.0",
  "author": {
    "name": "Jay Mathis",
    "email": "code@mathis.network",
    "url": "https://github.com/mathiscode"
  },
  "contributors": [
    {
      "name": "James Prevett",
      "email": "jp@jamespre.dev",
      "url": "https://github.com/james-pre"
    }
  ],
  "repository": "https://github.com/ecmaos/ecmaos",
  "bugs": "https://github.com/ecmaos/ecmaos/issues",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "turbo run build",
    "build:docs": "typedoc && echo docs.ecmaos.sh > docs/CNAME",
    "build:kernel": "turbo run build --filter=@ecmaos/* --filter=@ecmaos-devices/*",
    "dev": "turbo run dev --filter=@ecmaos/* --concurrency=20",
    "dev:kernel": "turbo run dev --filter=@ecmaos/kernel",
    "dev:docs": "pnpm sync:readme && concurrently nodemon \"pnpx serve --cors -l 30444 ./docs\"",
    "fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "fix:repo": "sherif --fix",
    "lint": "turbo run lint",
    "lint:repo": "sherif",
    "preinstall": "npx only-allow pnpm",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "start": "turbo run dev --filter=@ecmaos/kernel",
    "sync": "pnpm sync:readme && pnpm sync:version && pnpm sync:version:html && pnpm build:docs && pnpm sync:tutorials && pnpm sync:docs && pnpm sync:licenses && pnpm sync:zenfs && pnpm sync:initfs",
    "sync:docs": "cp -r docs core/kernel/public/initfs/usr/share/docs/@ecmaos/kernel",
    "sync:initfs": "tar --owner=root --group=root -czf core/kernel/public/initfs.tar.gz -C core/kernel/public/initfs .",
    "sync:licenses": "cp LICENSE LICENSE-APACHE LICENSE-MIT core/kernel/public/initfs/usr/share/licenses/@ecmaos/kernel/",
    "sync:readme": "cp README.md core/kernel/README.md && cp README.md core/kernel/public/initfs/usr/share/docs/@ecmaos/kernel/index.md",
    "sync:tutorials": "./utils/sync-tutorials.sh",
    "sync:version": "pnpm version $(node -e \"console.log(require('./core/kernel/package.json').version)\") --no-git-tag-version || true",
    "sync:version:html": "./utils/sync-html-version.js",
    "sync:version:tag": "pnpm version $(node -e \"console.log(require('./core/kernel/package.json').version)\")",
    "sync:zenfs": "./utils/sync-zenfs.sh",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:bench": "turbo run test:bench",
    "test:ui": "turbo run test:ui",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@ecmaos/config-typescript": "workspace:^",
    "@turbo/gen": "^2.2.3",
    "@types/webmidi": "^2.1.0",
    "@typhonjs-typedoc/ts-lib-docs": "^2024.9.18",
    "@typhonjs-typedoc/typedoc-theme-dmt": "^0.2.1",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.2.5",
    "serve": "^14.2.3",
    "sherif": "^1.0.1",
    "turbo": "^2.7.2",
    "typedoc": "^0.27.2",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "canvas": "Automattic/node-canvas#master"
  }
}
